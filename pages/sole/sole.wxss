/* pages/sole/sole.wxss */
page{background-color:#f0f0f0;}
.tab-box{height:100%;/* min-height:100%; */display:flex;flex-direction:column;box-sizing:border-box;}
.nav{width:100%;height:88rpx;line-height:88rpx;text-align:center;border-bottom:1rpx solid #f0f0f0;background:#fff;}
.default{width:25%;text-align:center;color:#666;font-size:28rpx;display:inline-block;}
.on{color:#333;font-size:30rpx;position:relative;font-weight:bold;}
.on:after{content:'';position:absolute;width:32rpx;height:6rpx;left:50%;bottom:3rpx;margin-left:-16rpx;background:-webkit-linear-gradient(left,#ee1a1a,#f55b41);background:linear-gradient(to right,#ee1a1a,#f55b41);}
.swiper{width:100%;flex:1;height:calc(100vh - 188rpx);overflow: hidden}
.swiper .scroll-box{height:100%;}
.item-list{padding:34rpx 30rpx 0;background:#fff;}
.item-list .tit{font-size:32rpx;color:#333;font-weight:bold;line-height:50rpx;display:-webkit-box;overflow:hidden;white-space:normal;text-overflow:ellipsis;-webkit-box-orient:vertical;-webkit-line-clamp:2;margin-bottom:16rpx;}
.item-list .item-img{width:100%;height:350rpx;border-radius:16rpx;overflow:hidden;}
.item-list .item-img image{width:100%;height:100%;}
.item-list .item-bot{height:80rpx;line-height:80rpx;border-bottom:1rpx solid #f0f0f0;}
.item-list:last-of-type .item-bot{border:none}
.item-list .bot-l view{display:inline-block;font-size:22rpx;color:#999;}
.item-list .bot-l .name{margin-right:15rpx;}
.item-list .bot-l .period{margin-right:40rpx;}
.item-list .bot-r image{width:30rpx;height:26rpx;margin:0 10rpx 0 30rpx;vertical-align:-2px;}
.item-list .bot-r view{position:relative;float:left;font-size:22rpx;color:#999;}
.item-list .bot-r button{position:absolute;top:0;left:0;height:100%;width:100%;opacity:0;}
.item-list .bot-r button::after{display:none;}
.item-list1{padding:40rpx 30rpx 30rpx;margin-bottom:20rpx;background:#fff;}
.item-list1:last-child{margin-bottom:0;}
.item-list1 .item-img{width:100%;height:307rpx;border-radius:16rpx 16rpx 0 0;overflow:hidden;position:relative;}
.item-list1 .item-img image{width:100%;height:100%;}
.item-list1 .item-img .cover{width:calc(100% - 40rpx);height:60rpx;line-height:60rpx;font-size:24rpx;color:#fff;padding:0 20rpx;position:absolute;left:0;bottom:0;background:-webkit-linear-gradient(top,rgba(0,0,0,0) 0%,rgba(0,0,0,.8) 100%);}
.item-list1 .cover .flexn view{display:inline-block;}
.item-list1 .cover .attention .icon{display:inline-block;background:url(http://img.pccoo.cn/headline-xcx/images/column-attention.png);background-size:cover;width:24rpx;height:20rpx;margin-right:10rpx;}
.item-list1 .txt-box{padding:24rpx 0 0;font-size:26rpx;color:#999;line-height:35rpx;height:70rpx;overflow:hidden;position:relative;}
.item-list1 .txt-box .icon{width:80rpx;height:70rpx;padding-right:10rpx;float:left;margin-right:20rpx;border-right:1rpx solid #e2e2e2;}
.item-list1 .txt-box .icon image{width:80rpx;height:70rpx;}
.item-list1 .txt-box .go{font-size:24rpx;color:#333;position:absolute;right:0;bottom:0;height:35rpx;line-height:35rpx;width:200rpx;text-align:right;background:-webkit-linear-gradient(left,rgba(255,255,255,0) 0%,rgba(255,255,255,1) 10%);background:linear-gradient(to right,rgba(255,255,255,0) 0%,rgba(255,255,255,1) 25%);}
.item-list1 .txt-box .row{width:11rpx;height:22rpx;background:url(http://img.pccoo.cn/headline-xcx/images/column-row.png);float:right;background-size:cover;margin:8rpx 0 0 10rpx;}
.column-swiper .hold-bottom,.column-swiper .loading{background:#f0f0f0;border-top:none;margin-top:-20rpx;}

.share-box{bottom:97rpx;}
